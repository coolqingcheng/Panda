@page "/post/{id}.html"
@model Panda.App.Pages.Post
@inject IConfiguration Configuration
@{
    var post = Model.PostModel;
}
<div class="row">
    <div class="col-12 col-lg-9">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="crumbs">
                            <a href="/">@Configuration.GetSection("site:Name").Value</a>
                            <span class="text-muted">/</span>
                            <a href="/category/@post.CateId">@post.CateName</a>
                            <span class="text-muted">/</span>
                            <a href="/post/@(post.Id).html">@post.Title</a>
                        </div>
                    </div>
                </div>
                <hr class="line"/>
                <div class="row">
                    <div class="col">
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <a href="#">上一篇</a>
                    </div>
                    <div class="col-12 col-lg-6">
                        <a href="#">下一篇</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-3">
        @await Html.PartialAsync("_CategoryPartial")
    </div>
</div>