@page "/category/{id:int}_{index:int}"

@using Panda.App.Models
@model Panda.App.Pages.Category.Category

<div class="row">
    <div class="col">
        <h1>分类: @Model.CateName</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                @foreach (var item in Model.ListItems)
                {
                    @(await Html.PartialAsync("Shared/_PostItemPartial", item))
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        @await Html.PartialAsync("_PaginationPartial", new PaginationModel()
        {
            CurrIndex = Model.Index, Count = Model.Count,
            Url = "/category/" + Model.Index + "_{0}"
        })
    </div>
</div>